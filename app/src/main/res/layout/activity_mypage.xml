<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dcdcdc"
    tools:context=".mypage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/btnmenu"
            android:background="@mipmap/bmenu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="마이페이지"
            android:textColor="#000000"
            android:textSize="8pt" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/brownbell"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C7953E"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffffff">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/in1"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="40dp"/>
                <TextView
                    android:id="@+id/tvid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="아이디"
                    android:textSize="8pt"
                    android:textColor="#000000"
                    android:layout_marginLeft="100dp"/>
                <TextView
                    android:id="@+id/tvemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:textColor="#8C8C8C"
                    android:text="dolbom.kpu.ac.kr"
                    android:layout_marginLeft="100dp"
                    android:textSize="6pt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="님 환영합니다."
                    android:textSize="8pt"
                    android:textColor="#000000"
                    android:layout_marginLeft="160dp"/>
                <Button
                    android:id="@+id/btnlogout"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_toLeftOf="@+id/btnintro"
                    android:textColor="#000000"
                    android:background="@mipmap/tran"
                    android:layout_marginRight="3dp"
                    android:text="로그아웃"/>
                <Button
                    android:id="@+id/btnintro"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/rightarrow"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="자기소개"
                    android:textColor="#000000" />
                <Button
                    android:id="@+id/btnintroupdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수정"
                    android:textColor="#000000"
                    android:background="#dcdcdc"
                    android:layout_marginLeft="200dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvintroduce"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text=" "
                    android:hint="자기소개를 작성해주세요."
                    android:textColorHint="#c7c7c7"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btninterest"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="45dp"
                        android:layout_weight="1"
                        android:background="@mipmap/love"/>
                    <Button
                        android:id="@+id/btnrecent"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="45dp"
                        android:layout_weight="1"
                        android:background="@mipmap/binoculars"/>
                    <Button
                        android:id="@+id/btnchat"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="@mipmap/chat"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="관심글"
                        android:textAlignment="center"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="최근 본 돌봄"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="대화목록"
                        android:textAlignment="center"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <Button
                android:id="@+id/btnmywrite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="내가 쓴 돌봄글"
                android:textColor="#000000"
                android:background="#ffffff"/>
            <Button
                android:id="@+id/btnnewwrite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:text="커뮤니티 쓴 글"
                android:textColor="#000000"
                android:background="#ffffff"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="고객센터"
                android:textColor="#000000"
                android:background="#ffffff"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:text="공지사항"
                android:textColor="#000000"
                android:background="#ffffff"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="20dp"
                android:text="설정"
                android:textColor="#000000"
                android:background="#ffffff"/>
            </LinearLayout>
            </ScrollView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>