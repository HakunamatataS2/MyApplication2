<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Quickmenu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/arrow"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/btnback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="급구돌봄이"
            android:textColor="#000000"
            android:textSize="8pt" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="11dp"
            android:layout_marginRight="7dp"
            android:id="@+id/btnmenu"
            android:background="@mipmap/bmenu"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:background="@mipmap/lightbrown">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="2dp"
                android:text="날짜선택"
                android:textColor="#000000" />
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/edge"
                android:hint=" 2000/00/00"
                android:textColor="#000000"
                android:textColorHint="#dcdcdc"
                android:id="@+id/tvday"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="선택"
                android:layout_marginLeft="5dp"
                android:onClick="mOnClick"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:background="#C7953E"
                android:id="@+id/btnch"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="~"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/edge"
                android:hint=" 2000/00/00"
                android:textColor="#000000"
                android:textColorHint="#dcdcdc"
                android:id="@+id/tvday2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="7dp"
                android:text="돌봄이종류"
                android:textColor="#000000"/>
            <Spinner
                android:id="@+id/spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="4dp"
                android:background="#C7953E">
            </Spinner>
        </LinearLayout>
        <Button
            android:id="@+id/btnok"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="결과보기"
            android:textColor="#000000"
            android:background="#C7953E"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:text=" 총         건"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:textSize="7pt"
                android:textColor="#000000"
                android:id="@+id/tvtotal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:text="정렬조건"
                android:textColor="#000000" />
            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@mipmap/triangle"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#dcdcdc"
            android:dividerHeight="1dp"
            android:choiceMode="singleChoice"
            android:id="@+id/Listview">
        </ListView>
    </LinearLayout>
</LinearLayout>