<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Shortmenu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/arrow"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/btnback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="단기돌봄이"
            android:textColor="#000000"
            android:textSize="8pt" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="11dp"
            android:layout_marginRight="7dp"
            android:id="@+id/btnmenu"
            android:background="@mipmap/bmenu"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@mipmap/lightbrown">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/edge"
                android:textColor="#000000"
                android:id="@+id/btnall"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1일"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:background="@drawable/edge"
                android:textColor="#000000"
                android:id="@+id/btnoneday"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1주일 이하"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:background="@drawable/edge"
                android:textColor="#000000"
                android:id="@+id/btnoneweek"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1주일~2주일"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:background="@drawable/edge"
                android:textColor="#000000"
                android:id="@+id/btntwoweek"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1달"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:background="@drawable/edge"
                android:textColor="#000000"
                android:id="@+id/btnonemonth"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:text=" 총         건"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:textSize="7pt"
                android:textColor="#000000"
                android:id="@+id/tvtotal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:text="정렬조건"
                android:textColor="#000000" />
            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@mipmap/triangle"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#dcdcdc"
            android:dividerHeight="1dp"
            android:choiceMode="singleChoice"
            android:id="@+id/Listview">
        </ListView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#dcdcdc"
            android:dividerHeight="1dp"
            android:choiceMode="singleChoice"
            android:id="@+id/Listview2">
        </ListView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#dcdcdc"
            android:dividerHeight="1dp"
            android:choiceMode="singleChoice"
            android:id="@+id/Listview3">
        </ListView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#dcdcdc"
            android:dividerHeight="1dp"
            android:choiceMode="singleChoice"
            android:id="@+id/Listview4">
        </ListView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#dcdcdc"
            android:dividerHeight="1dp"
            android:choiceMode="singleChoice"
            android:id="@+id/Listview5">
        </ListView>
    </RelativeLayout>
</LinearLayout>