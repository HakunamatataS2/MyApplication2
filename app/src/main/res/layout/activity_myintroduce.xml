<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dcdcdc"
    tools:context=".Myintroduce">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/arrow"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/btnback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="내 정보 관리"
            android:textColor="#000000"
            android:textSize="8pt" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 번경"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="#4C4C4C"
        android:textSize="7pt" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:layout_marginBottom="2dp"
                android:textSize="7pt"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:layout_marginTop="20dp"
                android:textSize="7pt"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새 비밀번호"
                android:layout_marginTop="20dp"
                android:textSize="7pt"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새 비밀번호 확인"
                android:layout_marginTop="20dp"
                android:textSize="7pt"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:layout_marginBottom="2dp"
                android:textSize="7pt"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/editpsd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="현재 비밀번호를 입력하세요."
                android:textColorHint="#dcdcdc"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="@drawable/edge"/>
            <EditText
                android:id="@+id/editnewpsd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="새로운 비밀번호를 입력하세요."
                android:textColorHint="#dcdcdc"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="@drawable/edge"/>
            <EditText
                android:id="@+id/editnewpsdchk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="새로운 비밀번호를 재입력하세요."
                android:textColorHint="#dcdcdc"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="@drawable/edge"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정정보 변경"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="5dp"
        android:textColor="#4C4C4C"
        android:textSize="7pt" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_marginBottom="2dp"
                android:textSize="7pt"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:layout_marginTop="20dp"
                android:textSize="7pt"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소"
                android:layout_marginTop="20dp"
                android:textSize="7pt"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="핸드폰 번호"
                android:layout_marginTop="20dp"
                android:textSize="7pt"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="7pt"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/editemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edge"
                android:layout_marginTop="20dp"
                android:hint="새로운 번호를 입력하세요."
                android:textColorHint="#dcdcdc"
                android:textColor="#000000"/>

            <EditText
                android:id="@id/editaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edge"
                android:layout_marginTop="20dp"
                android:hint="새로운 주소를 입력하세요."
                android:textColorHint="#dcdcdc"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/editphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edge"
                android:layout_marginTop="20dp"
                android:hint="새로운 번호를 입력하세요."
                android:textColorHint="#dcdcdc"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 탈퇴"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="#4C4C4C"
        android:textSize="7pt" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/tvtal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="회원 탈퇴를 원하시면 아래의 버튼을 눌러주세요."
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="7pt"/>
        <Button
            android:id="@+id/btntal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:text="탈퇴하기"
            android:layout_below="@+id/tvtal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:background="#C7953E"
            android:textSize="7pt"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginBottom="15dp"
            android:text="입력하신 내용으로 수정하시겠습니까?"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="7pt"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff">

        <Button
            android:id="@+id/btnedit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="수정"
            android:textColor="#ffffff"
            android:background="#C7953E"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="15dp"
            android:textSize="7pt" />

        <Button
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="취소"
            android:textColor="#ffffff"
            android:background="#C7953E"
            android:layout_marginTop="7dp"
            android:layout_marginRight="100dp"
            android:textSize="7pt" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>